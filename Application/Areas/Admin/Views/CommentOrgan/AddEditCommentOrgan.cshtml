@model Application.Models.tbl_CommentOrgan
@using Application.PublicModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Application


    <form asp-controller="CommentOrgan" asp-action="AddEditCommentOrgan" id="addeditcommentorgan" data-ajax="true" data-ajax-method="post"
          data-ajax-update="#addeditcommentorgan" data-ajax-mode="replace">

      
        @*header*@

        @if (Model.idComment != 0)
        {
            @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "ویرایش دسته بندی" })
        }
        else
        {
            @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "افزودن دسته بندی" })
        }





        @*body*@

        <div class="modal-body form-horizontal">

            <div class="row">
                <div class="form-group">
                    <label asp-for="CommentText" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="CommentText" class="form-control" />
                        <span asp-validation-for="CommentText" class="text-danger"></span>
                    </div>
                </div>

                

                <div class="form-group">
                    <label asp-for="ComTime" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="ComTime" class="form-control" />
                        <span asp-validation-for="ComTime" class="text-danger"></span>
                    </div>
                </div>
              
                <div class="form-group">
                    <label asp-for="ComDate" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="ComDate" class="form-control" />
                        <span asp-validation-for="ComDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="OrganName" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="OrganName" class="form-control" />
                        <span asp-validation-for="OrganName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="OrganCode" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="OrganCode" class="form-control" />
                        <span asp-validation-for="OrganCode" class="text-danger"></span>
                    </div>
                </div>



                <div class="form-group hidden">
                    <label asp-for="idComment" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="idComment" class="form-control" />
                    </div>
                </div>

                <input type="hidden" name="redirecturl" value="@Url.Action("index","CommentOrgan")" />

            </div>


        </div>


