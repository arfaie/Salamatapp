@model Application.Models.NavbarModels.InformingNavbar
@using Application.PublicModel


@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Application

@{
    ViewData["Title"] = "اطلاعیه های کارکنان";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="color:white;text-align:center" class=@TempData["css"]>
    @if (TempData["notice"] != null)
    {
        <p>@TempData["notice"]</p>
    }
</div>
<div class="layout-content-body">
    <div class="row gutter-xs">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-actions">
                        <button type="button" class="card-action card-toggler" title="Collapse"></button>
                        <button type="button" class="card-action card-reload" title="Reload"></button>
                        <button type="button" class="card-action card-remove" title="Remove"></button>
                    </div>
                    <strong>لیست اطلاعیه های کارکنان</strong>
                </div>

                <div class="card-body">

                    <div class="md-form-group md-label-floating col-md-6">
                        <div class="md-form-group md-label-floating col-md-6">
                            <input class="md-form-control" type="text" name="name" id="serachInput" spellcheck="false" required="" aria-required="true">
                            <label class="md-control-label">جستجو</label>
                        </div>
                    </div>
                    <div class="md-form-group md-label-floating col-md-6">
                        <div class="margin-top">
                            <div class="col-xs-6 col-md-6">
                                <a class="btn btn-primary marginbutoom" id="showcategory" data-toggle="modal" asp-action="AddEditInformingPrivate"
                                   data-target="#modal-action-informingprivate">
                                    <i class="glyphicon glyphicon-plus"></i>
                                    افزودن اطلاعیه جدید
                                </a>
                            </div>
                        </div>
                    </div>
                    <table id="example" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>کد</th>
                                <th>متن اطلاعیه</th>
                                <th>تاریخ و ساعت</th>
                                <th>عکس</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 0;
                                foreach (var item in Model.Informings)
                                {
                                    i++;
                                    <tr>
                                        <td>@i</td>
                                        @if (item.infoDes.Length >= 50)
                                        {
                                            <td>@item.infoDes.ToString().Substring(0, 50)...</td>
                                        }
                                        else
                                        {
                                            <td>@item.infoDes.ToString()</td>
                                        }

                                        <td>@item.InfoDateTime</td>

                                        @if (@item.imagename == null)
                                        {
                                            <td>
                                                <p>بدون عکس</p>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <img src="@ViewBag.rootpath@item.imagename" style=" width:80px; height:80px" class="thumbnail text-center" />
                                            </td>
                                        }


                                        <td>
                                            <a class="btn btn-info" id="editcategory" data-toggle="modal" asp-action="AddEditInformingPrivate"
                                               data-target="#modal-action-informingprivate" asp-route-Id="@item.idInfo">
                                                <i class="glyphicon glyphicon-pencil"></i>
                                                ویرایش
                                            </a>

                                            <a class="btn btn-danger" id="showcategory" data-toggle="modal" asp-action="DeleteInformingPrivate"
                                               data-target="#modal-action-informingprivate" asp-route-Id="@item.idInfo">
                                                <i class="glyphicon glyphicon-trash"></i>
                                                حذف
                                            </a>

                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="progress" class="addModal">
    <div class="addCenter">
        <img src="~/Content/loading.gif" />
    </div>
</div>
<div id="infoModalAlertColored" tabindex="-1" role="dialog" class="modal fade">

</div>
<div id="successModalAlert" tabindex="-1" role="dialog" class="modal fade">

</div>


@Html.Partial("_Modal", new BootstrapModel { ID = "modal-action-informingprivate", Size = ModalSize.Medium })

@section Scripts{
    <script src="~/js/modal-js/informingprivate-index.js"></script>
    <script>

        $(document).on('Click', '#submitdata', function (evt) {
            evt.preventDefault();
            var data = new FormData();
            //دریافت مقادیر فایل آپلودی
            var fileupload = $("#files").get(0);
            var files = fileupload.files;
            for (var i = 0; i < files.length; i++) {
                data.append('files', files[i]);
            }
            //دریافت مقادیر موجود
            $('input,select').each(function (x,y) {
                data.append($(y).attr('name'), $(y).val());
            });
            $.ajax({
                type: "Post",
                url: '@Url.Action("AddEditInformingPrivate", "InformingPrivate", new { area ="Admin"})',
                contentType: false,
                processData: false,
                data: data
                //وقتی که اطلاعات سمت سرور رفت و جواب از سرور آمد
            }).done(function (res) {
                if (res.status === "success") {
                    alert(res.message);
                    window.location.href = '@Url.Action("Index", "InformingPrivate")';
                }
                else {

                    $.each(res.error, function (a, b) {
                        alert(b);
                    })

                    //alert(res.error);
                }
                //برای وقتی که کلا اطلاعات سمت سرور نرفت و در همان بدو ورود خطا داد
            }).fail(function (xhr, b, error) {
                alert(error);
            })

        });


    </script>
}