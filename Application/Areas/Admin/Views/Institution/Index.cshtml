@model Application.Models.NavbarModels.InstitutionNavbar
@using Application.PublicModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Application

@{
    ViewData["Title"] = "موسسات درمانی";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="color:white;text-align:center" class=@TempData["css"]>
    @if (TempData["notice"] != null)
    {
        <p>@TempData["notice"]</p>
    }
</div>
<div class="layout-content-body">
    <div class="row gutter-xs">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-actions">
                        <button type="button" class="card-action card-toggler" title="Collapse"></button>
                        <button type="button" class="card-action card-reload" title="Reload"></button>
                        <button type="button" class="card-action card-remove" title="Remove"></button>
                    </div>
                    <strong>لیست موسسات درمانی</strong>
                </div>

                <div class="card-body">

                    <div class="md-form-group md-label-floating col-md-6">
                        <div class="md-form-group md-label-floating col-md-6">
                            <input class="md-form-control" type="text" name="name" id="serachInput" spellcheck="false" required="" aria-required="true">
                            <label class="md-control-label">جستجو</label>
                        </div>
                    </div>
                    <div class="md-form-group md-label-floating col-md-6">
                        <div class="margin-top">
                            <div class="col-xs-6 col-md-6">
                                <a class="btn btn-primary marginbutoom" id="showcategory" data-toggle="modal" asp-action="AddEditInstitution"
                                   data-target="#modal-action-institution">
                                    <i class="glyphicon glyphicon-plus"></i>
                                    افزودن موسسه جدید
                                </a>
                            </div>
                        </div>
                    </div>


                    <table id="example" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>کد</th>
                                <th>کد موسسه</th>
                                <th>نام</th>
                                <th>نام ارگان اصلی</th>
                                <th>بیمارستان</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 0;
                                foreach (var item in Model.viewNewInstituteses)
                                {
                                    i++;
                            <tr>
                                <td>@i</td>
                                <td>@item.codeOrgan</td>
                                @if (item.nameOrgan.Length >= 35)
                                {
                                    <td>@item.nameOrgan.Substring(0, 35)...</td>
                                }
                                else
                                {
                                    <td>@item.nameOrgan</td>
                                }
                                @if (item.nameOrganMain.Length >= 35)
                                {
                                    <td>@item.nameOrganMain.Substring(0,35)...</td>
                                }
                                else
                                {
                                    <td>@item.nameOrganMain</td>
                                }
                                <td>@item.hos</td>
                                <td>
                                    <a class="btn btn-info" id="editcategory" data-toggle="modal" asp-action="AddEditInstitution"
                                       data-target="#modal-action-institution" asp-route-Id="@item.idInstitues">
                                        <i class="glyphicon glyphicon-pencil"></i>
                                        ویرایش
                                    </a>

                                    <a class="btn btn-danger" id="showcategory" data-toggle="modal" asp-action="DeleteInstitution"
                                       data-target="#modal-action-institution" asp-route-Id="@item.idInstitues">
                                        <i class="glyphicon glyphicon-trash"></i>
                                        حذف
                                    </a>

                                </td>
                            </tr>
                                }
                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
<div id="progress" class="addModal">
    <div class="addCenter">
        <img src="../Content/loading.gif" />
    </div>
</div>
<div id="infoModalAlertColored" tabindex="-1" role="dialog" class="modal fade">

</div>
<div id="successModalAlert" tabindex="-1" role="dialog" class="modal fade">

</div>


@Html.Partial("_Modal", new BootstrapModel { ID = "modal-action-institution", Size = ModalSize.Medium })

@section Scripts{
    <script src="~/js/modal-js/institution-index.js"></script>
}

